<Page x:Class="ConnectingDBToApp.Views.Pages.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConnectingDBToApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultPage">

    <StackPanel Orientation="Vertical"
                >
        <TextBlock Text="{Binding Username}"/>
        <TextBlock>
            <TextBlock.Text>
                <MultiBinding StringFormat="Вы набрали {0} из {1}">
                    <Binding Path="CountRightAnswer"/>
                    <Binding Path="CountQuestions"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock>
            <TextBlock.Text>
                <Binding StringFormat="Процентное соотношение: {0:P}"
                         Path="Percentages"/>
            </TextBlock.Text>
        </TextBlock>
    </StackPanel>
</Page>
