<Page x:Class="ConnectingDBToApp.Views.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConnectingDBToApp.Views.Pages"
      xmlns:vm="clr-namespace:ConnectingDBToApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="TestPage">
    <Page.DataContext>
        <vm:TestViewModel/>
    </Page.DataContext>
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <TextBlock Text="Тест на полученные знания"
                   Style="{StaticResource H1}"/>
        <Button Content="ПРОЙТИ"
                Style="{StaticResource TestButton}"
                Command="{Binding OpenTest}"/>
    </StackPanel>
</Page>
