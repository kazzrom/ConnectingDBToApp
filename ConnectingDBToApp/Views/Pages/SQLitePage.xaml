<Page x:Class="ConnectingDBToApp.Views.Pages.SQLitePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConnectingDBToApp.Views.Pages"
      xmlns:gc="clr-namespace:ConnectingDBToApp.GlobalClasses"
      xmlns:vm="clr-namespace:ConnectingDBToApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SQLitePage">
    <Page.DataContext>
        <vm:SQLiteViewModel/>
    </Page.DataContext>
    <StackPanel>
        <TextBlock Text="SQLite"
                   Style="{StaticResource H1}"/>
        <TabControl>
            <TabItem Header="Создание БД">
                <ListBox ItemsSource="{Binding CreatingDbItems}"
                         Style="{StaticResource DataListBox}"/>
            </TabItem>
            <TabItem Header="Подключение БД">
                <ListBox ItemsSource="{Binding EFCoreConnectingDbItems}"
                         Style="{StaticResource DataListBox}"/>
            </TabItem>
        </TabControl>
    </StackPanel>
</Page>
